{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    /* Modules */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true,
  }
}
